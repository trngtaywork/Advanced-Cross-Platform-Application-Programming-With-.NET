<Window x:Class="AsynchronousDemonstration03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsynchronousDemonstration03"
        mc:Ignorable="d"
        Title="Asynchronous with TAP" Height="400" Width="600">
    <Grid>
        <Button x:Name="btnStart"
                Content="Start" HorizontalAlignment="Center"
                Margin="0,10,0,0" VerticalAlignment="Top"
                Width="75" Height="24"
                Click="btnStart_Click"/>
        <TextBox x:Name="txtResults" TextWrapping="Wrap"
                 FontFamily="Concolas"
                 VerticalScrollBarVisibility="Visible"
                 Margin="0,45,0,0"/>
    </Grid>
</Window>
